<Window x:Class="AttackMapEditor.AddDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttackMapEditor"
        mc:Ignorable="d"
        Title="AddDialog" Height="300" Width="300">
    <Grid>
        <Label Content="Direction" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="DirectionBox" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="175"/>
        <Label Content="Classification" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ClassificationBox" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="175"/>
        <Button Content="Create" HorizontalAlignment="Left" Margin="110,239,0,0" VerticalAlignment="Top" Width="75" Click="Save"/>

    </Grid>
</Window>
